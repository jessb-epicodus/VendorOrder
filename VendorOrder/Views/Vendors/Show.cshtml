@{
  Layout = "_Layout";
}
@using VendorOrder.Models;
<h3>@Model["vendor"].Name</h3><hr>
<ul>
@if (@Model["orders"].Count == 0) {
  <p><em>No orders have been added</em></p>
}
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
}
</ul><br>
<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add Order</a></p>
<p><a href='/vendors'>Return to Vendors</a></p>
<p><a href='/'>Return Home</a></p>